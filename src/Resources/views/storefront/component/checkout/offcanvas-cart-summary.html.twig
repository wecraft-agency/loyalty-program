{% sw_extends '@Storefront/storefront/component/checkout/offcanvas-cart-summary.html.twig' %}

{% block component_offcanvas_summary_content %}
    {{ parent() }}

    {% if page.cart.data.elements.loyalty_points_total and page.cart.data.elements.loyalty_points_total > 0 %}
        <div style="background: blue; color: white; padding: 1rem;">
            {{ "loyaltyProgram.global.pointsTotal"|trans|sw_sanitize }}: <strong>{{ page.cart.data.elements.loyalty_points_total }}</strong>
        </div>
    {% endif %}
{% endblock %}
